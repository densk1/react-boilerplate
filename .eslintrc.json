{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb",
  "env": { 
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "ecmascript": 6
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-underscore-dangle": [2, { "allow": ["__REDUX_DEVTOOLS_EXTENSION__"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}